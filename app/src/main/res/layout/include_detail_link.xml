<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="3">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/detail_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">


            <ImageView
                android:id="@+id/detail_img_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_detail_action"
                android:src="@drawable/ic_local_phone_black_24dp" />

            <TextView
                android:id="@+id/detail_action_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/detail_img_call"
                android:textColor="@color/colorPrimary"
                android:text="@string/detail_call" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <RelativeLayout
            android:id="@+id/detail_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/detail_img_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_detail_action"
                android:src="@drawable/ic_star_gold_24dp"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/detail_action_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/detail_img_like"
                android:textColor="@color/colorPrimary"
                android:text="@string/detail_like" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/detail_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"  >

            <ImageView
                android:id="@+id/detail_img_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_detail_action"
                android:src="@drawable/ic_website" />

            <TextView
                android:id="@+id/detail_action_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/detail_img_website"
                android:textColor="@color/colorPrimary"
                android:text="@string/detail_website" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>