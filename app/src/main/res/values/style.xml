<resources>
    <!-- Base application theme. -->
    <style name="Theme.Go4Lunch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    
    <style name="LoginTheme" parent="Theme.Go4Lunch">
        <item name="android:windowTranslucentStatus">true</item>

        <item name="windowActionBar"> false </item>
        <item name="windowNoTitle"> true </item>

        <item name="android:windowBackground"> @drawable/background_sign_in </item>
    </style>

    <!-- List View -->
    <style name="ListViewRestaurantName" >
        <item name="android:textColor"> @color/black </item>
        <item name="android:textStyle"> bold </item>
    </style>

    <style name="ListViewRestaurantHoursOK">
        <item name="android:textStyle"> italic </item>
    </style>

    <style name="ListViewRestaurantHoursNO">
        <item name="android:textColor"> @color/red_warning </item>
        <item name="android:textStyle"> bold </item>
    </style>


    <!-- Map View -->
    <style name="MapViewMessageTitle" >
        <item name="android:textColor"> @color/black </item>
        <item name="android:textStyle"> bold </item>
    </style>

</resources>